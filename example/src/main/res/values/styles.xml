<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="st_18_white">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/_white</item>
    </style>

    <style name="st_12_black_35">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/_black_35</item>
    </style>

    <style name="st_12_black">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/_black</item>
    </style>

    <style name="st_14_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/_black</item>
    </style>

    <style name="st_cancel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/_red_accent</item>
    </style>

    <style name="st_14_primary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/_primary</item>
    </style>

    <style name="st_14_black_35">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/_black_35</item>
    </style>

    <style name="st_14_black_50">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/_black_50</item>
    </style>

    <style name="st_16_black_50">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/_black_50</item>
    </style>

    <style name="st_16_primary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/_primary</item>
    </style>

    <style name="st_18_black">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/_black</item>
    </style>

    <style name="st_20_black">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/_black</item>
    </style>

    <style name="AppInputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rectangle_white_grey_border</item>
        <item name="android:paddingBottom">@dimen/pad_6</item>
        <item name="android:paddingLeft">@dimen/pad_8</item>
    </style>

    <!--<style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">-->
        <!--<item name="fontPath">fonts/Nunito-Light.ttf</item>-->
    <!--</style>-->

    <!--<style name="sans_serif" parent="AppTheme.Widget.TextView">-->
        <!--<item name="fontPath">fonts/Nunito-Light.ttf</item>-->
    <!--</style>-->

    <style name="st_14_black_main_3">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_main_3</item>
    </style>

    <style name="st_14_black_main_3_bold" parent="st_14_black_main_3">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="st_14_blue_main_1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue_main_1</item>
    </style>

    <style name="st_14_blue_main_1_bold" parent="st_14_blue_main_1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="st_12_gray_main_1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_main_1</item>
    </style>

    <style name="AppEditTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#41545B</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="AppGreenButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/green_button_selector</item>
        <item name="android:layout_height">@dimen/pad_40</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CircularProgress">
        <item name="cpd_padding">0dp</item>
        <item name="cpd_initialAngle">0</item>
        <item name="cpd_maxSweepAngle">270</item>
        <item name="cpd_minSweepAngle">1</item>
        <item name="cpd_strokeSize">4dp</item>
        <item name="cpd_strokeColor">@color/_primary</item>
        <item name="cpd_strokeSecondaryColor">@android:color/transparent</item>
        <item name="cpd_reverse">false</item>
        <item name="cpd_rotateDuration">1000</item>
        <item name="cpd_transformDuration">600</item>
        <item name="cpd_keepDuration">200</item>
        <item name="cpd_transformInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="pv_progressMode">indeterminate</item>
        <item name="cpd_inAnimDuration">0</item>
        <item name="cpd_outAnimDuration">@android:integer/config_mediumAnimTime</item>
    </style>
</resources>
