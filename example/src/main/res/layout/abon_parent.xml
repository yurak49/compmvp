<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <com.yurak.yurii.compon.components.StaticList
            android:id="@+id/invoices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemLayoutId="@layout/item_my_card"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/cards"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
        <com.yurak.yurii.compon.components.PagerIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:diametrItem="@dimen/_pad_6"
            app:itemId="@drawable/circle_primary"
            app:itemSelectId="@drawable/circle_primary_dark"/>
        <LinearLayout
            android:id="@+id/further"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/abonnementType"
                    style="@style/st_18_black"
                    android:layout_marginTop="@dimen/_pad_40" />
        </LinearLayout>

</LinearLayout>