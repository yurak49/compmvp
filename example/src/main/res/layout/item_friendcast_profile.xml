<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/Recipient.PictureUrl"
            android:layout_width="@dimen/pad_60"
            android:layout_height="@dimen/pad_60"
            android:layout_marginLeft="@dimen/pad_4"
            android:layout_marginTop="@dimen/pad_2"
            android:src="@drawable/profile_blank" />

        <TextView
            android:id="@+id/Recipient.FirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Recipient.PictureUrl"
            android:paddingLeft="@dimen/pad_4"
            android:paddingTop="@dimen/pad_4"
            android:textColor="@color/blue_main_1"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Recipient.FirstName"
            android:layout_toRightOf="@+id/Recipient.PictureUrl"
            android:paddingLeft="@dimen/pad_4"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/Activity.Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Recipient.PictureUrl"
            android:layout_marginLeft="@dimen/pad_4" />
    </RelativeLayout>
</LinearLayout>