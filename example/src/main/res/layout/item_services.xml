<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="@dimen/_icon_wh"
        android:layout_height="@dimen/_icon_wh"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_pad_20"/>

    <LinearLayout
        android:id="@+id/title_l"
        android:layout_toRightOf="@+id/img_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/img_add"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="@dimen/_pad_32"
        android:layout_marginRight="@dimen/_pad_12"
        android:layout_marginBottom="@dimen/_pad_20">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/st_20_black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_pad_12" >

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/st_14_black_50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="грн."/>
            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/st_14_black_50"
                android:layout_marginLeft="@dimen/_pad_10" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="мин"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/img_add"
        android:layout_marginRight="@dimen/_pad_32"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_add_service" />

</RelativeLayout>