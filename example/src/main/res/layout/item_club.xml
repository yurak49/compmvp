<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/_pad_12"
    android:paddingTop="@dimen/_pad_12"
    android:paddingRight="@dimen/_pad_12"
    android:background="@color/_black_10">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/_white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            style="@style/st_18_black"
            android:layout_marginLeft="@dimen/_pad_32"
            android:layout_marginRight="@dimen/_pad_32"
            android:layout_marginTop="@dimen/_pad_24" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_pad_32"
            android:layout_marginRight="@dimen/_pad_32"
            android:layout_marginTop="@dimen/_pad_12"
            android:layout_marginBottom="@dimen/_pad_36"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/_icon_wh"
                android:layout_height="@dimen/_icon_wh"
                android:src="@drawable/icon_pin" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                style="@style/st_14_black_50"
                android:layout_marginLeft="@dimen/_pad_12" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>